{
  "productName": "AssessmentBench",
  "version": "0.1.0",
  "identifier": "com.assessmentbench.app",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "AssessmentBench",
        "width": 1280,
        "height": 768,
        "minWidth": 1024,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Education",
    "copyright": "Copyright Â© 2024 AssessmentBench",
    "shortDescription": "Research-grade AI grading benchmarking tool",
    "longDescription": "Research-grade desktop application for systematic benchmarking and comparison of AI grading approaches with comprehensive analysis capabilities."
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "license": "MIT",
    "licenseFile": "../LICENSE"
  },
  "plugins": {
    "fs": {
      "scope": ["**"]
    },
    "dialog": {
      "all": true
    },
    "shell": {
      "all": false,
      "sidecar": false
    },
    "sql": {
      "preload": ["sqlite:assessment_bench.db"]
    }
  }
}